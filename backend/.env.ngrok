# ngrok用の設定ファイル
NODE_ENV=production
PORT=3001

# データベース設定
DATABASE_URL="postgresql://facescore_user:FaceScore2024!SecureDB@postgres:5432/facescore_db?schema=public"

# セキュリティ設定（ngrok用）
CORS_ORIGIN="https://facescore-app.ngrok.io,https://your-ngrok-subdomain.ngrok.io"
JWT_SECRET="ngrok-jwt-secret-replace-with-secure-key"
SESSION_SECRET="ngrok-session-secret-replace-with-secure-key"

# ファイルアップロード設定
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/app/uploads"

# ログ設定
LOG_LEVEL=info
LOG_DIR="/app/logs"

# API制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100